{
  "name": "llm-review",
  "displayName": "llm-review",
  "description": "LLM を活用した効率的なレビューツール",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "bin": "./out/cli.js",
  "repository": {
    "url": "https://github.com/fuchigta/llm-review"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "LLM Review",
      "properties": {
        "llmReview.enable": {
          "type": "boolean",
          "default": true,
          "description": "レビューを有効にする"
        },
        "llmReview.configFileName": {
          "type": "string",
          "default": "llm-review.yaml",
          "description": "設定ファイル名"
        }
      }
    },
    "commands": []
  },
  "scripts": {
    "build": "tsc -noCheck -noResolve",
    "prepare": "npm run build",
    "start": "node ./out/cli.js",
    "dev": "ts-node ./src/cli.ts",
    "vscode:prepublish": "npm run compile -- -noCheck -noResolve ",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "files": [
    "out/**/*"
  ],
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@langchain/core": "^0.3.40",
    "@langchain/google-genai": "^0.1.8",
    "@langchain/openai": "^0.4.4",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "handlebars": "^4.7.8",
    "langchain": "^0.3.19",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "zod": "^3.24.2"
  }
}
