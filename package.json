{
  "name": "llm-review",
  "displayName": "llm-review",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:plaintext"
  ],
  "main": "./out/extension/extension.js",
  "bin": {
    "llm-review": "./bin/cli.js"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "LLM Review",
      "properties": {
        "llmReview.enable": {
          "type": "boolean",
          "default": true,
          "description": "レビューを有効にする"
        },
        "llmReview.configFileName": {
          "type": "string",
          "default": "review.yaml",
          "description": "設定ファイル名(レビュー対象ファイルと同ディレクトリに配置すること)"
        }
      }
    },
    "commands": []
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "textlint": "^14.4.2",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
